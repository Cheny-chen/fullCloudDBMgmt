<%- include('partials/head') %>
<!-- 引入 Nevigator 在 header  -->
<%- include('partials/header') %>
<div class="container-fluid">
    <form action="" method="get">
        <%- include('partials/breadcrumb_1', {db:'identifies', url:'identifiesAdd'}) %>
        <table class="table table-responsive table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>_id</th>
                    <th>identifyName</th>
                    <th>snID</th>
                    <th>idGroupID</th>
                    <th>deviceList</th>
                    <th>enable</th>
                    <th>updateTime<br />
                        createTime</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% identifiesData.forEach((identify, cindex) => {  %>
                    <tr>
                        <th scope="row"><%= cindex+1 %></th>
                        <td><%= identify._id %></td>
                        <td><%= identify.identifyName %></td>
                        <td><%= identify.snID %></td>
                        <td><%= identify.idGroupID %></td>
                        <td><%= identify.deviceList %></td>
                        <td><%= identify.enable %></td>
                        <td><%= momentTimezone(identify.updateTime).tz('Asia/Taipei').format('lll') %><br />
                            <%= momentTimezone(identify.createTime).tz('Asia/Taipei').format('lll') %></td>
                        <td>
                            <button type="submit" class="btn btn-danger btn-delete" formaction="/identifiesDelete/<%= identify._id %>">Delete</button>
                            <button type="submit" class="btn btn-info btn-edit" formaction="/identifiesEdit/<%= identify._id %>">Edit</button>
                            <br />
                            <button type="submit" class="btn btn-secondary btn-add" formaction="/groupsAdd/<%= identify._id%>">Group</button>
                            <button type="submit" class="btn btn-dark btn-add" formaction="/automationsAdd/<%= identify._id%>">Auto</button>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
        </table>
        <div class="contain-button pull-right">
            <button type="submit" class="btn btn-success btn-add" formaction="/identifiesAdd">Add</button>
        </div>
    </form>
</div>
<%- include('partials/footer') %>
