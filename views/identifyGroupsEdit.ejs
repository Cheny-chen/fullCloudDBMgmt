<%- include('partials/head') %>
<!-- 引入 Nevigator 在 header  -->
<%- include('partials/header') %>
<div class="container">
    <form method="post" class="formOutline">
        <%- include('partials/breadcrumb_2', {db:'identifyGroups', action:'Edit'}) %>
        <div class="form-group row">
            <label for="input_id" class="col-sm-2 col-form-label">_id</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="input_id" placeholder="identify group ID" readonly value="<%= identifyGroup._id %>">
            </div>
        </div>
        <div class="form-group row">
            <label for="input_groupName" class="col-sm-2 col-form-label">groupName</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="input_groupName" placeholder="identify group Name" value="<%= identifyGroup.groupName %>">
            </div>
        </div>
        <div class="form-group row">
            <label for="input_snID" class="col-sm-2 col-form-label">snID</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="input_snID" placeholder="serial Number ID" value="<%= identifyGroup.snID %>">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9"></div>
            <div class="offset-sm-9 col-sm-3">
                <button type="reset" class="btn btn-info btn-reset">Reset</button>
                <button type="submit" class="btn btn-primary btn-submit" formaction="/identifyGroupsEditSubmit/<%= identifyGroup._id %>">Submit</button>
            </div>
        </div>
    </form>
</div>
<%- include('partials/footer') %>
<script>
    $('#input_groupName').on("change", function(event) {
        $(this).attr('name','groupName');
    })
    $('#input_snID').on("change", function(event) {
        $(this).attr('name','snID');
    })
</script>
