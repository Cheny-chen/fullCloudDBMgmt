<%- include('partials/head') %>
<!-- 引入 Nevigator 在 header  -->
<%- include('partials/header') %>
<div class="container">
    <form id="thisForm" action="" method="post" class="formOutline">
        <%- include('partials/breadcrumb_2', {db:'serialNumbers', action:'Add'}) %>
        <div class="form-group row">
            <label for="input_snKey" class="col-sm-2 col-form-label">snKey</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="input_snKey" name="snKey" placeholder="serial Numbers Key">
            </div>
        </div>
        <div class="form-group row">
            <label for="input_clientID" class="col-sm-2 col-form-label">clientID</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="input_clientID" name="clientID" placeholder="client ID">
            </div>
        </div>
        <div class="form-group row">
            <label for="input_gatewayList" class="col-sm-2 col-form-label">gatewayList</label>
            <% for(i=0; i<12; i++) { %>
                <div class="col-sm-3">
                    <input type="text" class="form-control gatewayList" placeholder="gateway ID">
                </div>
                <% if((i+1)%3 == 0) { %>
                    <label for="input_gatewayList" class="col-sm-2 col-form-label"></label>
                <% }
            }%>
        </div>
        <div class="form-group row">
            <label for="input_registTime" class="col-sm-2 col-form-label">registTime</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="input_registTime" name="registTime" required placeholder="YYYY-MM-DD HH:MM:SS">
            </div>
        </div>
        <div class="form-group row">
            <label for="input_endTime" class="col-sm-2 col-form-label">endTime</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="input_endTime" name="endTime" required placeholder="YYYY-MM-DD HH:MM:SS">
            </div>
        </div>
        <div class="form-group row">
            <label for="input_active" class="col-sm-2 col-form-label">active</label>
            <div class="col-sm-10">
                <label class="custom-control custom-radio">
                  <input name="active" type="radio" class="custom-control-input" value="0">
                  <span class="custom-control-indicator"></span>
                  <span class="custom-control-description">disable</span>
                </label>
                <label class="custom-control custom-radio">
                  <input name="active" type="radio" class="custom-control-input" value="1" checked>
                  <span class="custom-control-indicator"></span>
                  <span class="custom-control-description">active</span>
                </label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9"></div>
            <div class="offset-sm-9 col-sm-3">
                <button type="reset" class="btn btn-info btn-reset">Reset</button>
                <button type="submit" class="btn btn-primary btn-submit" formaction="/serialNumbersAddSubmit">Submit</button>
            </div>
        </div>
    </form>
</div>
<%- include('partials/footer') %>
<script>
$(".gatewayList").on("change", function(event) {
    $(this).attr("name","gatewayList")
})
</script>
